<?xml version="1.0"?>
<robot name="pro_cubesat_3u_dual_panel">

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.3"/>
      </geometry>
      <material name="dark_grey">
        <color rgba="0.2 0.2 0.2 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="4.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.033" ixy="0" ixz="0" iyy="0.033" iyz="0" izz="0.006"/>
    </inertial>
  </link>

  <link name="panel_right">
    <visual>
      <origin xyz="0 0.15 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.005 0.3 0.25"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.3 0.8 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0.15 0"/>
      <inertia ixx="0.004" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.004"/>
    </inertial>
  </link>

  <joint name="joint_panel_right" type="revolute">
    <parent link="base_link"/>
    <child link="panel_right"/>
    <origin xyz="0 0.05 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1.0" lower="0" upper="1.57" velocity="0.5"/>
  </joint>

  <link name="panel_left">
    <visual>
      <origin xyz="0 -0.15 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.005 0.3 0.25"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.3 0.8 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 -0.15 0"/>
      <inertia ixx="0.004" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.004"/>
    </inertial>
  </link>

  <joint name="joint_panel_left" type="revolute">
    <parent link="base_link"/>
    <child link="panel_left"/>
    <origin xyz="0 -0.05 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1.0" lower="-1.57" upper="0" velocity="0.5"/>
  </joint>

</robot>
