<?xml version="1.0"?>
<robot name="furuta_pendulum">
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.05"/>
      </geometry>
      <material name="grey"><color rgba="0.5 0.5 0.5 1"/></material>
    </visual>
  </link>

  <joint name="arm_joint" type="revolute">
    <parent link="base_link"/>
    <child link="arm_link"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 0.05"/>
    <dynamics damping="0.2" friction="0.05"/>
  </joint>

  <link name="arm_link">
    <visual>
      <origin xyz="0.1 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.01"/>
      </geometry>
      <material name="blue"><color rgba="0 0 0.8 1"/></material>
    </visual>
    <inertial>
      <origin xyz="0.1 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="pendulum_joint" type="revolute">
    <parent link="arm_link"/>
    <child link="pendulum_link"/>
    <origin xyz="0.2 0 0"/>
    <axis xyz="1 0 0"/>
    <dynamics damping="0.01" friction="0.005"/>
  </joint>

  <link name="pendulum_link">
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.008"/>
      </geometry>
      <material name="red"><color rgba="0.8 0 0 1"/></material>
    </visual>
    <inertial>
      <origin xyz="0 0 0.1"/>
      <mass value="0.1"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.00001"/>
    </inertial>
  </link>
</robot>
