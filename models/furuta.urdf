<?xml version="1.0"?>
<robot name="furuta_pendulum">
  <link name="base_link">
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>
  <joint name="arm_joint" type="revolute">
    <parent link="base_link"/>
    <child link="arm_link"/>
    <axis xyz="0 0 1"/>
  </joint>
  <link name="arm_link">
    <inertial>
      <origin xyz="0.1 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>
  <joint name="pendulum_joint" type="revolute">
    <parent link="arm_link"/>
    <child link="pendulum_link"/>
    <origin xyz="0.2 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>
  <link name="pendulum_link">
    <inertial>
      <origin xyz="0 0 0.1"/>
      <mass value="0.1"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.00001"/>
    </inertial>
  </link>
</robot>
